{
    "name": "sunrise/ui",
    "version": "1.0.0",
    "main": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "modules": "dist/index.mjs",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./styles.css": "./dist/styles.css",
        "./Button": {
            "types": "./dist/Button.d.mts",
            "default": "./dist/Button.mjs"
        },
        "./Card": {
            "types": "./dist/Card.d.mts",
            "default": "./dist/Card.mjs"
        },
        "./Input": {
            "types": "./dist/Input.d.mts",
            "default": "./dist/Input.mjs"
        },
        "./Table": {
            "types": "./dist/Table.d.mts",
            "default": "./dist/Table.mjs"
        }
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "pnpm run clean && tsup && pnpm run build:css",
        "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts,.tsx",
        "clear": " rimraf node_modules dist",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.17",
        "@tailwindcss/postcss": "^4.1.17",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "postcss": "^8.4.47",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "tailwindcss": "^4.1.17",
        "vitepress": "^1.0.0-rc.31"
    },
    "dependencies": {
        "class-variance-authority": "^0.7.0",
        "glob": "^10.3.10",
        "lucide-react": "^0.553.0",
        "rimraf": "^5.0.5",
        "tsup": "8.5.0",
        "typescript": "5.9.3"
    }
}