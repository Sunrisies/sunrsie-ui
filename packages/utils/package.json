{
  "name": "sunrise-utils",
  "version": "1.0.32",
  "description": "一个使用esbuild进行本地开发的工具库， 包含了一些常用的工具函数，主要是使用在浏览器环境",
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "modules": "dist/index.mjs",
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "push": "node ./publish.js",
    "tsc": "tsc",
    "dev": "tsup --watch",
    "dev:tsc": "tsc -w",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "start:dev": "node esbuild-build.js",
    "tests": "node esbuild-build.js && node index.js",
    "test": "api-extractor run -c api-extractor.json",
    "pretests": "npm run test",
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:preview": "vitepress preview",
    "commit": "git-cz",
    "docs:push": "scp -r ./.vitepress/dist root@sunrise1024.top:/home/www/sunrise",
    "test:unit": "jest",
    "coverage": "vitest run --coverage",
    "ui": "vitest --ui",
    "typedoc": "typedoc"
  },
  "repository": {
    "directory": "packages/sunrise",
    "type": "git",
    "url": "https://github.com/Sunrisies/utils.git"
  },
  "keywords": [
    "library",
    "typescript",
    "utils",
    "esbuild",
    "bun"
  ],
  "author": "朝阳",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "3.0.1",
    "@vitest/ui": "^3.0.2",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "cz-git": "^1.11.0",
    "esbuild": "^0.20.2",
    "esbuild-plugin-d.ts": "^1.3.1",
    "eslint": "^9.16.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "jsdom": "^26.0.0",
    "tsup": "8.5.0",
    "typedoc-plugin-frontmatter": "^1.1.2",
    "typedoc-vitepress-theme": "^1.1.1",
    "typescript": "^5.7.2",
    "vitepress": "^1.5.0",
    "vitest": "^3.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "dependencies": {
    "happy-dom": "^17.4.4",
    "typedoc": "^0.28.4",
    "typedoc-plugin-markdown": "^4.6.3"
  }
}